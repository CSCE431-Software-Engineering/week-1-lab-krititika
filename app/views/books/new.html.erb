<h1>Add a New Book</h1>

<%= form_with url: books_path, method: :post do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :author %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.label :published_year %>
    <%= form.text_field :published_year %>
  </div>

  <div>
    <%= form.submit "Create Book", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back to Home", root_path, class: "btn btn-secondary" %>